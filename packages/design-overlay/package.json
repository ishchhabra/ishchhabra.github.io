{
  "name": "@i2-labs/design-overlay",
  "version": "1.0.0",
  "description": "Shared overlay components for i2-labs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles.css": "./src/styles/index.css"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json --sourceRoot \"$(pwd)/src\" && tsc-alias -p tsconfig.json",
    "build:watch": "tsc-watch -p tsconfig.json --sourceRoot \"$(pwd)/src\" --onSuccess \"pnpm postbuild\"",
    "postbuild": "tsc-alias -p tsconfig.json && echo 'Build complete'",
    "prepare": "pnpm build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "oxfmt",
    "format-check": "oxfmt --check",
    "lint": "oxlint",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "radix-ui": "^1.4.3",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@types/react": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "tailwindcss": "catalog:",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "catalog:",
    "typescript": "catalog:",
    "@types/react-dom": "catalog:"
  },
  "keywords": [],
  "license": "ISC",
  "author": "",
  "packageManager": "pnpm@10.14.0",
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  }
}